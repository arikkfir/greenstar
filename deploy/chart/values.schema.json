{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "cleanup": {
            "type": "object",
            "properties": {
                "cronjobs": {
                    "type": "boolean"
                },
                "jobs": {
                    "type": "boolean"
                }
            }
        },
        "ingress": {
            "type": "object",
            "additionalProperties": false,
            "required": ["domain"],
            "properties": {
                "domain": {
                    "type": "string"
                }
            }
        },
        "acme": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "extraArgs": {
                    "$ref": "#/$defs/extraArgs"
                },
                "extraEnv": {
                    "$ref": "#/$defs/extraEnv"
                },
                "files": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["name", "content"],
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "content": {
                                "type": "object"
                            }
                        }
                    }
                },
                "image": {
                    "$ref": "#/$defs/image"
                },
                "rbac": {
                    "$ref": "#/$defs/rbacConfiguration"
                },
                "resources": {
                    "$ref": "#/$defs/podResourcesConfiguration"
                }
            }
        },
        "server": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "migrate": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "extraEnv": {
                            "$ref": "#/$defs/extraEnv"
                        },
                        "postgresPassword": {
                            "type": "string"
                        },
                        "resources": {
                            "$ref": "#/$defs/podResourcesConfiguration"
                        }
                    }
                },
                "extraArgs": {
                    "$ref": "#/$defs/extraArgs"
                },
                "extraEnv": {
                    "$ref": "#/$defs/extraEnv"
                },
                "image": {
                    "$ref": "#/$defs/image"
                },
                "ingress": {
                    "$ref": "#/$defs/podIngressConfiguration"
                },
                "postgresPassword": {
                    "type": "string"
                },
                "rbac": {
                    "$ref": "#/$defs/rbacConfiguration"
                },
                "resources": {
                    "$ref": "#/$defs/podResourcesConfiguration"
                },
                "volumeMounts": {
                    "$ref": "#/$defs/volumeMountsConfiguration"
                },
                "volumes": {
                    "$ref": "#/$defs/volumesConfiguration"
                }
            }
        },
        "scrapers": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "image": {
                    "$ref": "#/$defs/image"
                },
                "rbac": {
                    "$ref": "#/$defs/rbacConfiguration"
                }
            }
        },
        "ratesjob": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "extraEnv": {
                    "$ref": "#/$defs/extraEnv"
                },
                "image": {
                    "$ref": "#/$defs/image"
                },
                "rbac": {
                    "$ref": "#/$defs/rbacConfiguration"
                },
                "resources": {
                    "$ref": "#/$defs/podResourcesConfiguration"
                },
                "schedule": {
                    "type": "string"
                }
            }
        },
        "frontend": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "extraArgs": {
                    "$ref": "#/$defs/extraArgs"
                },
                "extraEnv": {
                    "$ref": "#/$defs/extraEnv"
                },
                "image": {
                    "$ref": "#/$defs/image"
                },
                "ingress": {
                    "$ref": "#/$defs/podIngressConfiguration"
                },
                "rbac": {
                    "$ref": "#/$defs/rbacConfiguration"
                },
                "resources": {
                    "$ref": "#/$defs/podResourcesConfiguration"
                },
                "volumeMounts": {
                    "$ref": "#/$defs/volumeMountsConfiguration"
                },
                "volumes": {
                    "$ref": "#/$defs/volumesConfiguration"
                },
                "readinessProbe": {
                    "type": "boolean"
                },
                "livenessProbe": {
                    "type": "boolean"
                },
                "startupProbe": {
                    "type": "boolean"
                }
            }
        },
        "postgres": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "version": {
                    "type": "string"
                },
                "clean": {
                    "type": "boolean"
                },
                "extraArgs": {
                    "$ref": "#/$defs/extraArgs"
                },
                "extraEnv": {
                    "$ref": "#/$defs/extraEnv"
                },
                "metrics": {
                    "type": "boolean"
                },
                "password": {
                    "type": "string"
                },
                "ingress": {
                    "$ref": "#/$defs/podIngressConfiguration"
                },
                "rbac": {
                    "$ref": "#/$defs/rbacConfiguration"
                },
                "resources": {
                    "$ref": "#/$defs/podResourcesConfiguration"
                },
                "volumeMounts": {
                    "$ref": "#/$defs/volumeMountsConfiguration"
                },
                "volumes": {
                    "$ref": "#/$defs/volumesConfiguration"
                }
            }
        }
    },
    "required": [],
    "$defs": {
        "extraArgs": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "extraEnv": {
            "type": "object",
            "additionalProperties": true
        },
        "image": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "repository": {
                    "type": "string",
                    "minLength": 1
                },
                "tag": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string",
                    "minLength": 1,
                    "enum": ["IfNotPresent", "Always", "Never"]
                }
            }
        },
        "podIngressConfiguration": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "enabled": {
                            "const": false
                        }
                    }
                }, {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "enabled": {
                            "const": true
                        },
                        "parentRef": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["kind", "name", "namespace", "httpSectionName", "httpsSectionName"],
                            "properties": {
                                "kind": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "namespace": {
                                    "type": "string"
                                },
                                "httpSectionName": {
                                    "type": "string"
                                },
                                "httpsSectionName": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }, {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "enabled": {
                            "const": true
                        },
                        "parentRef": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["kind", "name", "namespace", "tlsSectionName"],
                            "properties": {
                                "kind": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "namespace": {
                                    "type": "string"
                                },
                                "tlsSectionName": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            ]
        },
        "rbacConfiguration": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "annotations": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            }
        },
        "podResourcesConfiguration": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "limits": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "volumeMountsConfiguration": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "volumesConfiguration": {
            "type": "array",
            "items": {
                "type": "object"
            }
        }
    }
}
