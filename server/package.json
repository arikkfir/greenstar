{
    "name": "server",
    "description": "GreenSTAR Server",
    "version": "0.0.0+local",
    "private": true,
    "license": "ISC",
    "type": "module",
    "author": {
        "name": "Arik Kfir",
        "email": "arik@kfirs.com",
        "url": "https://github.com/arikkfir"
    },
    "scripts": {
        "build": "./node_modules/.bin/tsc && cp -v src/schema/*.graphql ./dist/schema/",
        "start": "npm run build && node ./dist/index.js",
        "dev": "./node_modules/.bin/nodemon --exec 'npm run start || exit 1'",
        "codegen": "graphql-codegen --config codegen.ts",
        "test": "./node_modules/.bin/jest"
    },
    "dependencies": {
        "@apollo/server": "^4.12.2",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/auto-instrumentations-node": "^0.60.1",
        "@opentelemetry/exporter-prometheus": "^0.202.0",
        "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
        "@opentelemetry/instrumentation-express": "^0.51.0",
        "@opentelemetry/instrumentation-graphql": "^0.50.0",
        "@opentelemetry/instrumentation-http": "^0.203.0",
        "@opentelemetry/resources": "^2.0.1",
        "@opentelemetry/sdk-metrics": "^2.0.1",
        "@opentelemetry/sdk-node": "^0.202.0",
        "@opentelemetry/sdk-trace-node": "^2.0.1",
        "@opentelemetry/semantic-conventions": "^1.34.0",
        "cors": "^2.8.5",
        "dataloader": "^2.2.3",
        "express": "^4.21.2",
        "graphql": "^16.11.0",
        "graphql-scalars": "^1.24.2",
        "luxon": "^3.6.1",
        "pg": "^8.16.3",
        "postgres-interval": "^4.0.2"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^5.0.7",
        "@graphql-codegen/typescript": "^4.1.6",
        "@graphql-codegen/typescript-document-nodes": "^4.0.16",
        "@graphql-codegen/typescript-resolvers": "^4.5.1",
        "@tsconfig/node23": "^23.0.2",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.23",
        "@types/jest": "^30.0.0",
        "@types/luxon": "^3.6.2",
        "@types/node": "^24.0.10",
        "@types/pg": "^8.15.4",
        "jest": "^30.0.4",
        "nodemon": "^3.1.10",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    },
    "nodemonConfig": {
        "ext": "graphql,js,ts",
        "ignore": "dist/**"
    },
    "scarfSettings": {
        "enabled": false
    }
}
